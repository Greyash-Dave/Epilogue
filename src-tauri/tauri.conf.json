{
    "productName": "Epilogue",
    "version": "1.0.0",
    "identifier": "com.epilogue.reader",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../dist"
    },
    "app": {
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Epilogue",
                "width": 1280,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {}
}