{
    "version": "2.0",
    "name": "Cozy Reading",
    "author": "Epilogue",
    "description": "Warm, hearth-side atmosphere",
    "background": {
        "type": "image",
        "path": "media/backgrounds/fireplace.svg"
    },
    "overlay": {
        "color": "#3E2723",
        "opacity": 0.15
    },
